{
  "devDependencies": {
    "@types/node": "~9.4.2",
    "lerna": "^3.4.1",
    "npm-run-all": "~4.1.3",
    "prettier": "1.14.0",
    "rimraf": "~2.6.1",
    "tslint": "~5.10.0",
    "tslint-react": "^3.6.0",
    "typescript": "~3.1.1",
    "webpack": "~4.12.0",
    "webpack-cli": "^3.0.3",
    "@types/webpack-env": "~1.13.6"
  },
  "name": "@deathbeds/jupyterlab-outsource",
  "private": true,
  "scripts": {
    "bootstrap": "jlpm && run-s bootstrap:js bootstrap:lab",
    "bootstrap:js": "jlpm lerna bootstrap && jlpm build",
    "bootstrap:lab": "jlpm lab:ext && jlpm lab:link && jlpm lab:build",
    "build": "lerna run build --stream",
    "clean": "run-p clean:*",
    "clean:lib": "lerna exec --parallel --stream -- rimraf lib",
    "lab:ext": "jupyter labextension install --no-build jupyterlab_robotmode@1.1.1",
    "lab:build": "jupyter lab build --dev",
    "lab:link": "lerna exec --concurrency 1 --stream -- jupyter labextension link . --no-build",
    "lint": "run-p lint:**",
    "lint:ts": "prettier --write *.json *.md *.yml && lerna exec -- prettier --write --config=../../.prettierrc ./src/**/*.ts ./src/**/*.tsx ./style/**/*.css ./*.json ./*.md && lerna exec -- tslint -c ../../tslint.json --fix ./src/**/*.ts",
    "watch:ts": "lerna run watch --parallel --stream",
    "watch:lab": "jupyter lab --no-browser --debug --watch"
  },
  "version": "0.1.0",
  "workspaces": [
    "src/*"
  ]
}
